        <link rel="stylesheet" type="text/css" href="/assets/styles/bootstrap.min.css"/>
        <link rel="stylesheet" type="text/css" href="/assets/styles/style.css"/>
        <link rel="stylesheet" type="text/css" href="/assets/styles/form.css"/>
        <link rel="stylesheet" type="text/css" href="/assets/styles/daterangepicker.css"/>
        <link rel="stylesheet" type="text/css" href="/assets/styles/select2.min.css"/>
        <link rel="stylesheet" type="text/css" href="/assets/styles/font-awesome.min.css"/>
